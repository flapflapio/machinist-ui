{
  "name": "atmos",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start -p $PORT",
    "test": "jest",
    "export": "next export",
    "deploy": "yarn build && yarn export -o build",
    "docker": "yarn deploy && docker-compose up -d",
    "docker-down": "docker-compose down",
    "run-ci": "gh workflow run -r $(git rev-parse --abbrev-ref HEAD)",
    "view-ci": "gh run view"
  },
  "dependencies": {
    "@ant-design/icons": "^4.7.0",
    "antd": "^4.18.7",
    "clsx": "^1.1.1",
    "graphql-request": "^4.0.0",
    "next": "^12.0.10",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-draggable": "^4.4.4",
    "react-is": "^17.0.2",
    "react-query": "^3.34.15",
    "recoil": "^0.6.1",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@aws-amplify/cli": "^7.6.22",
    "@babel/core": "^7.14.0",
    "@next/eslint-plugin-next": "^12.0.10",
    "@testing-library/dom": "^8.11.3",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^12.1.3",
    "@types/styled-components": "^5.1.9",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "amplify-category-analytics": "^3.2.21",
    "amplify-category-api": "^3.3.5",
    "amplify-category-auth": "^2.38.5",
    "amplify-category-function": "^3.5.2",
    "amplify-category-hosting": "^3.2.21",
    "amplify-category-interactions": "^3.2.21",
    "amplify-category-notifications": "^2.19.6",
    "amplify-category-predictions": "^3.2.21",
    "amplify-category-storage": "^2.13.0",
    "amplify-category-xr": "^3.2.21",
    "amplify-codegen": "^2.28.1",
    "amplify-frontend-android": "^3.3.3",
    "amplify-frontend-ios": "^3.3.21",
    "amplify-frontend-javascript": "^3.3.21",
    "amplify-provider-awscloudformation": "^5.9.8",
    "babel-jest": "^27.5.1",
    "babel-plugin-styled-components": "^2.0.2",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^27.5.1",
    "prettier": "^2.2.1",
    "typescript": "^4.5.5"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/.next/",
      "<rootDir>/node_modules/"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/test/setupTests.js"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "<rootDir>/node_modules/babel-jest",
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    },
    "moduleNameMapper": {
      "^.+\\.(css|less|scss)$": "identity-obj-proxy",
      "\\.(jpg|ico|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "identity-obj-proxy"
    }
  },
  "eslintConfig": {
    "ignorePatterns": [
      "**/*.d.ts"
    ],
    "env": {
      "browser": true,
      "es6": true,
      "node": true,
      "jest": true
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        },
        "webpack": {}
      },
      "import/extensions": [
        ".js",
        ".mjs",
        ".jsx",
        ".ts",
        ".tsx"
      ],
      "import/parsers": {
        "@typescript-eslint/parser": [
          ".ts",
          ".tsx"
        ]
      },
      "import/core-modules": [],
      "import/ignore": [
        "node_modules",
        "\\.(coffee|scss|css|less|hbs|svg|json)$"
      ]
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "react",
      "react-hooks",
      "prettier",
      "@next/eslint-plugin-next"
    ],
    "extends": [
      "airbnb",
      "prettier",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@next/next/recommended"
    ],
    "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2018,
      "sourceType": "module"
    },
    "rules": {
      "prefer-destructuring": "off",
      "import/prefer-default-export": "off",
      "import/no-named-as-default": "warn",
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
        "error"
      ],
      "quotes": "off",
      "object-curly-newline": "off",
      "no-nested-ternary": "off",
      "implicit-arrow-linebreak": "off",
      "react/react-in-jsx-scope": "off",
      "jsx-a11y/media-has-caption": "off",
      "react/prop-types": "off",
      "react/jsx-props-no-spreading": "off",
      "comma-dangle": "off",
      "no-underscore-dangle": "off",
      "react/no-array-index-key": "warn",
      "react/forbid-prop-types": "warn",
      "react-hooks/exhaustive-deps": "warn",
      "react-hooks/rules-of-hooks": "error",
      "react/require-default-props": "off",
      "class-methods-use-this": "off",
      "no-shadow": "off",
      "@typescript-eslint/no-shadow": "error",
      "lines-between-class-members": "off",
      "jsx-a11y/no-static-element-interactions": "warn",
      "max-classes-per-file": [
        "error",
        3
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {
          "devDependencies": true
        }
      ],
      "import/extensions": [
        "error",
        "ignorePackages",
        {
          "js": "never",
          "jsx": "never",
          "ts": "never",
          "tsx": "never"
        }
      ],
      "react/jsx-filename-extension": [
        2,
        {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      ],
      "react/function-component-definition": [
        0,
        {
          "namedComponents": "arrow-function",
          "unnamedComponents": "arrow-function"
        }
      ],
      "react/jsx-no-useless-fragment": [
        0,
        {
          "allowExpressions": true
        }
      ],
      "react/destructuring-assignment": [
        1
      ]
    }
  }
}
